{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "typeRoots": [
      "./node_modules/@types/",
      "./src/universal/types/*"
    ],
    "paths": {
      "@/*": [
        "src/renderer/*"
      ],
      "~/*": [
        "src/*"
      ],
      "root/*": [
        "./*"
      ],
      "#/*": [
        "src/universal/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "src/renderer/router/index.ts",
    "src/main.js",
  ],
  "exclude": [
    "node_modules",
  ]
}